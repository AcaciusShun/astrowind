---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Our Services"
    title="Transform Your Business with Custom SaaS Solutions"
    subtitle="We specialize in developing scalable SaaS applications, cloud infrastructure, and digital transformation solutions that drive business growth and operational efficiency."
    actions={[{ variant: 'primary', text: 'Get Started', href: '/contact' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1551434678-e076c223a692?ixlib=rb-4.0.3&auto=format&fit=crop&w=1740&q=80',
      alt: 'SaaS Development Team',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our SaaS Solution Portfolio"
    subtitle="Comprehensive technology services designed to accelerate your digital transformation and drive business innovation."
    columns={3}
    items={[
      {
        title: 'Custom CRM Development',
        description:
          'Build powerful customer relationship management systems with advanced analytics, automation workflows, and seamless third-party integrations.',
        icon: 'tabler:users-group',
      },
      {
        title: 'E-commerce Platforms',
        description:
          'Scalable online marketplace and e-commerce solutions with payment processing, inventory management, and advanced analytics capabilities.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'Project Management SaaS',
        description:
          'Collaborative project management platforms with real-time updates, resource allocation, time tracking, and team collaboration tools.',
        icon: 'tabler:timeline',
      },
      {
        title: 'Business Intelligence Dashboards',
        description:
          'Data visualization and analytics platforms that transform raw data into actionable insights with real-time reporting and predictive analytics.',
        icon: 'tabler:chart-dots-3',
      },
      {
        title: 'API-First Development',
        description:
          'RESTful and GraphQL API development with comprehensive documentation, versioning, rate limiting, and developer portal creation.',
        icon: 'tabler:api',
      },
      {
        title: 'Cloud Migration Services',
        description:
          'End-to-end cloud migration from legacy systems to modern cloud architectures with zero downtime and enhanced performance.',
        icon: 'tabler:cloud-upload',
      },
      {
        title: 'AI & ML Integration',
        description:
          'Machine learning model development and integration, natural language processing, computer vision, and AI-powered automation solutions.',
        icon: 'tabler:brain',
      },
      {
        title: 'IoT & Real-time Systems',
        description:
          'Internet of Things solutions with real-time data processing, device management, and edge computing capabilities.',
        icon: 'tabler:device-desktop-analytics',
      },
      {
        title: 'Fintech Solutions',
        description:
          'Secure financial technology platforms with payment processing, blockchain integration, compliance management, and advanced security features.',
        icon: 'tabler:coins',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Scalable Architecture',
        description:
          'Microservices architecture, auto-scaling capabilities, and cloud-native design ensure your application handles growth seamlessly.',
        icon: 'tabler:server',
      },
      {
        title: 'Security & Compliance',
        description:
          'Enterprise-grade security, GDPR compliance, data encryption, OAuth integration, and comprehensive security auditing.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Real-time Features',
        description:
          'WebSocket integration, live updates, push notifications, and real-time collaboration features for modern user experiences.',
        icon: 'tabler:bolt',
      },
      {
        title: 'DevOps & Monitoring',
        description:
          'CI/CD pipelines, automated testing, performance monitoring, error tracking, and 24/7 system health monitoring.',
        icon: 'tabler:activity',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1518611012118-696072aa579a?ixlib=rb-4.0.3&auto=format&fit=crop&w=870&q=80',
      alt: 'SaaS Architecture',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Technical Excellence</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Rapid Time-to-Market',
        description:
          'Agile development methodology and proven frameworks accelerate your product launch timeline while maintaining high quality.',
        icon: 'tabler:clock',
      },
      {
        title: 'Cost-Effective Solutions',
        description:
          'Our efficient development processes and reusable components significantly reduce development costs compared to traditional approaches.',
        icon: 'tabler:currency-dollar',
      },
      {
        title: 'Future-Proof Technology',
        description:
          'Built with modern, maintainable technologies that ensure your solution remains competitive and easily upgradeable.',
        icon: 'tabler:crystal-ball',
      },
      {
        title: 'Comprehensive Support',
        description:
          '24/7 technical support, regular updates, performance optimization, and ongoing maintenance ensure continued success.',
        icon: 'tabler:lifebuoy',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&auto=format&fit=crop&w=774&q=80',
      alt: 'Business Growth',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Business Impact</h3>
    </Fragment>
  </Content>

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="What Our Clients Say"
    testimonials={[
      {
        testimonial: `Somincola transformed our legacy system into a modern SaaS platform in just 4 months. Their technical expertise and attention to scalability has enabled us to handle 10x more users while reducing infrastructure costs by 40%.`,
        name: 'Jennifer Chen',
        job: 'CTO, TechFlow Solutions',
        image: {
          src: 'https://images.unsplash.com/photo-1594736797933-d0af501ba81c?ixlib=rb-4.0.3&auto=format&fit=crop&w=930&q=80',
          alt: 'Jennifer Chen Image',
        },
      },
      {
        testimonial: `The custom CRM solution Somincola built for us has revolutionized our sales process. The real-time analytics and automation features have increased our conversion rates by 65% and saved our team 20 hours per week.`,
        name: 'David Rodriguez',
        job: 'VP of Sales, GrowthFirst',
        image: {
          src: 'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-4.0.3&auto=format&fit=crop&w=774&q=80',
          alt: 'David Rodriguez Image',
        },
      },
      {
        testimonial: `Working with Somincola was exceptional. They delivered a complex e-commerce platform with AI recommendations and advanced analytics. The solution has driven a 150% increase in revenue within the first year.`,
        name: 'Lisa Thompson',
        job: 'Founder, EcoMarket',
        image: {
          src: 'https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&auto=format&fit=crop&w=824&q=80',
          alt: 'Lisa Thompson Image',
        },
      },
    ]}
    callToAction={{
      text: 'Start Your Project',
      href: '/contact',
      icon: 'tabler:arrow-right',
    }}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get a Free Consultation',
        href: '/contact',
      },
    ]}
    title="Ready to Transform Your Business?"
    subtitle="Let's discuss your project requirements and explore how our SaaS solutions can drive your business growth. Contact us for a free consultation and project estimate."
  />
</Layout>
