---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Build Something Amazing Together" />

  <ContactUs
    id="form"
    title="Start Your SaaS Project"
    subtitle="Ready to transform your ideas into a powerful SaaS solution? Our team of expert developers and consultants is here to help you succeed. Get in touch for a free consultation."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this form, you agree to our privacy policy and consent to be contacted regarding your project requirements.',
    }}
    description="Our technical consultants typically respond within 4-6 hours during business days with detailed project insights."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="How can we help you?"
    items={[
      {
        title: 'SaaS Development',
        description: `Custom SaaS application development, from initial concept to full-scale deployment with ongoing technical support and maintenance.`,
      },
      {
        title: 'Technology Consulting',
        description:
          'Strategic technology planning, digital transformation roadmaps, architecture reviews, and technical due diligence services.',
      },
      {
        title: 'Cloud Migration',
        description:
          'End-to-end cloud migration services, infrastructure optimization, and modern DevOps implementation for scalable solutions.',
      },
      {
        title: 'Email',
        description: 'contact@somincola.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Business Address',
        description: '30 N Gould St Ste N, Sheridan, WY 82801 US',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Business Hours',
        description: 'Monday - Friday: 8:00 AM - 6:00 PM (MST)',
        icon: 'tabler:clock',
      },
    ]}
  />
</Layout>
