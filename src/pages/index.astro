---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Somincola â€” Custom SaaS Development & Technology Consulting',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Contact Us',
        href: '/contact',
        icon: 'tabler:mail',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Professional Business Services',
    }}
  >
    <Fragment slot="title">
      Custom SaaS Solutions <span class="hidden xl:inline">&</span>
      <span class="text-accent dark:text-white"> Technology Consulting</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Somincola</span> delivers cutting-edge SaaS applications and strategic technology consulting
        to accelerate your digital transformation.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Somincola: Your Technology Partner.</span>
      From custom software development to cloud architecture consulting, we empower businesses with innovative technology
      solutions that drive growth and efficiency.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note
    title="Our Mission:"
    description="Transforming businesses through innovative SaaS solutions, cutting-edge technology, and strategic consulting expertise"
  />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Solutions"
    title="What you get with Somincola"
    subtitle="Cutting-edge SaaS development and technology consulting services designed to accelerate your digital transformation and drive business growth through innovative solutions."
    items={[
      {
        title: 'Custom SaaS Development',
        description:
          'End-to-end development of scalable SaaS applications tailored to your business requirements, from MVP to enterprise-grade solutions.',
        icon: 'tabler:cloud',
      },
      {
        title: 'Cloud Architecture & DevOps',
        description:
          'Expert cloud infrastructure design, implementation, and optimization using AWS, Azure, and GCP with modern DevOps practices.',
        icon: 'tabler:server',
      },
      {
        title: 'API Development & Integration',
        description:
          'RESTful and GraphQL API development, third-party integrations, and microservices architecture for seamless connectivity.',
        icon: 'tabler:api',
      },
      {
        title: 'Digital Transformation Consulting',
        description:
          'Strategic technology roadmaps, process optimization, and digital workflow transformation to modernize your operations.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Data Analytics & AI Solutions',
        description:
          'Business intelligence dashboards, data pipeline development, and AI-powered analytics to drive data-driven decisions.',
        icon: 'tabler:chart-dots',
      },
      {
        title: 'Technical Support & Maintenance',
        description:
          '24/7 technical support, system monitoring, performance optimization, and ongoing maintenance for your SaaS solutions.',
        icon: 'tabler:tools',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Our Expertise"
    title="Why Tech Leaders Choose Somincola"
    items={[
      {
        title: 'Cutting-Edge Technology Stack',
        description:
          'Leveraging the latest technologies including React, Node.js, Python, AWS, Kubernetes, and modern frameworks to build scalable solutions.',
      },
      {
        title: 'Proven Development Methodology',
        description:
          'Agile development practices, continuous integration/deployment, and comprehensive testing ensure reliable, high-quality deliverables.',
      },
      {
        title: 'Scalable Architecture Design',
        description:
          'Microservices, serverless computing, and cloud-native architectures that grow with your business and handle enterprise-level demands.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1551434678-e076c223a692?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Software Development Team',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Built on innovation and expertise
      </h3>
      Partner with technology experts who understand modern software architecture and business scalability
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Our SaaS Development Process"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Discovery & Planning</span>',
        description:
          'In-depth analysis of your requirements, user research, technical architecture planning, and project roadmap development.',
        icon: 'tabler:search',
      },
      {
        title: 'Step 2: <span class="font-medium">Design & Development</span>',
        description:
          'UI/UX design, agile development sprints, continuous testing, and iterative feedback integration to build your SaaS solution.',
        icon: 'tabler:code',
      },
      {
        title: 'Step 3: <span class="font-medium">Deployment & Launch</span>',
        description:
          'Cloud infrastructure setup, security implementation, performance optimization, and seamless production deployment.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Step 4: <span class="font-medium">Scale & Optimize</span>',
        description:
          'Ongoing monitoring, feature enhancements, performance scaling, and technical support to ensure continued success.',
        icon: 'tabler:trending-up',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?ixlib=rb-4.0.3&auto=format&fit=crop&w=987&q=80',
      alt: 'SaaS Development Process',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Common questions about Somincola's SaaS development and technology consulting services."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'What types of SaaS applications do you develop?',
        description:
          'We develop a wide range of SaaS solutions including CRM systems, project management tools, e-commerce platforms, data analytics dashboards, API platforms, and custom business applications tailored to specific industry needs.',
      },
      {
        title: 'What technologies do you use for development?',
        description:
          'We use modern, proven technologies including React, Vue.js, Node.js, Python, PostgreSQL, MongoDB, AWS, Azure, Docker, Kubernetes, and various AI/ML frameworks. Our technology choices depend on your specific requirements and scalability needs.',
      },
      {
        title: 'How long does it take to develop a SaaS application?',
        description:
          'Development timelines vary based on complexity and scope. A simple MVP can take 8-12 weeks, while enterprise-grade applications may take 6-12 months. We provide detailed project timelines during our initial consultation.',
      },
      {
        title: 'Do you provide ongoing support and maintenance?',
        description:
          'Yes, we offer comprehensive support packages including 24/7 monitoring, security updates, performance optimization, feature enhancements, and technical support to ensure your SaaS solution continues to perform optimally.',
      },
      {
        title: 'Can you help migrate legacy systems to modern SaaS?',
        description:
          'Absolutely. We specialize in digital transformation and can help modernize your legacy systems by migrating them to cloud-native SaaS architectures with improved performance, scalability, and maintainability.',
      },
      {
        title: 'What is your pricing model for SaaS development?',
        description:
          'We offer flexible pricing models including fixed-price projects, time and materials, and retainer-based development. Pricing depends on project scope, complexity, and timeline. We provide transparent estimates after understanding your requirements.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'SaaS Projects Delivered', amount: '150+' },
      { title: 'Technology Stack Expertise', amount: '25+' },
      { title: 'Client Satisfaction Rate', amount: '99%' },
      { title: 'Years in Tech Industry', amount: '8+' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Start Your Project',
        href: '/contact',
        icon: 'tabler:rocket',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Build Your&nbsp;<br class="block sm:hidden" /><span class="sm:whitespace-nowrap"
        >Next SaaS Solution?</span
      >
    </Fragment>

    <Fragment slot="subtitle">
      Transform your ideas into powerful SaaS applications. <br class="hidden md:inline" />Contact us today to discuss
      your project!
    </Fragment>
  </CallToAction>
</Layout>
